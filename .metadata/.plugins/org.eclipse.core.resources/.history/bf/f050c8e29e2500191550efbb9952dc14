package business;

import java.util.ArrayList;
import java.util.List;

public class Bank {
	private String name;
	private List<Count> counts;

	public Bank() {
		this.name = "Central";
		this.counts = new ArrayList<Count>();
	}

	public void createCount(String name) {
		this.counts.add(new Count(name));
	}

	public boolean deleteCount(int id) {
		for (Count count : this.counts)
			if (count.getId() == id) {
				this.counts.remove(count);
				return true;
			}
		return false;
	}

	public List<Count> findCountByName(String name) {
		List<Count> accounts = new ArrayList<Count>();
		for (Count count : this.counts)
			if (count.getOwner() == name)
				counts.add(count);
		return counts;
	}
	
