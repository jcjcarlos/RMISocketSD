package business;

import java.util.Random;

public class Count {
	private int id;
	private String owner;
	private double balanceCount = 0.0;
	private static String[] names = {"Fulano","Cicrano","Beltrano"};
	
	public Count() {
		Random random = new Random();
		this.id = random.nextInt(1000000) + 1;
		this.owner = names[random.nextInt(3)];
		this.balanceCount = 0.0;
	}
	
	public Count(String name, double value) {
		this.generateId();
		this.owner = name;
		this.balanceCount = value;
	}
	
	public Count(String name) {
		this.generateId();
		this.owner = name;
	}
	
	private void generateId() {
		Random random = new Random();
		this.id = random.nextInt(1000000);
	}
}
